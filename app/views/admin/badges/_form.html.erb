<%= form_with(model: [:admin, @badge], local: true) do |form| %>
  <%= render 'shared/errors', resource: @badge %>

  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p><br>

  <p>
    <%= form.label :image_url %>
    <%= form.text_field :image_url %>
  </p><br>

  <p>
    <%= form.label :rule %>
    <%= form.text_field :rule %>
  </p><br>

  <p>
    <%= form.label :criteria %>
    <%= form.text_field :criteria %>
  </p><br>

  <%= form.submit %>
<% end %>
