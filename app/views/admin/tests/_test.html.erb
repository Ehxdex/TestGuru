<tbody>
  <tr>
    <td class="align-middle">
      <%= test.title %>
      <%= render 'form_inline', test: test == @test ? @test : test %>
    </td>
    <td class="align-middle"><%= test.questions.count %></td>
    <td class="align-middle"><%= test.level %>
    <td class="align-middle"><%= test.category.title %></td>
    <td class="align-middle"><%= test.author.first_name %> <%= test.author.last_name %></td>

    <td class="align-middle"><%= link_to t(".show"), admin_test_path(test) %></td>
    <td class="align-middle"><%= link_to t(".edit"), edit_admin_test_path(test) %></td>
    <td class="align-middle"><%= link_to t(".delete"), admin_test_path(test), data: {
                      turbo_method: :delete,
                      turbo_confirm: t(".confirm")
                    } %></td>             
  </tr>
</tbody>
