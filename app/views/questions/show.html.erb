<h3>Question:</h3>

<p><%= @question.body %></p>

<h2>Answers</h2>

<%= link_to 'New answer', new_question_answer_path(@question) %>

<ol>
  <%= render @question.answers %>
</ol>

<p><%= link_to "Edit", edit_question_path(@question) %></p>
<p><%= link_to "Delete question", question_path(@question), data: {
                    turbo_method: :delete,
                    turbo_confirm: "Are you sure?"
                  }  %></p>


<p><%= link_to "Back", admin_tests_path(@question.test) %></p>
