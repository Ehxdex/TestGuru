<nav class="navbar navbar-light bg-light p-4">
  <%= link_to t(".logo"), root_path, class: 'navbar-brand' %> 
  <% if current_user.is_a?(Admin) %>
    <%= link_to t(".admin_panel"), admin_tests_path %>
  <% end %>

  <span class="navbar-text">
    <% if user_signed_in? %>
      <p class="nav user">
      <%= t(".greeting") %>, <b><%= current_user.email %><b>
      <%= link_to t(".logout"), destroy_user_session_path, data: {turbo_method: :delete} %>
    <% else %>
      <%= link_to t(".login"), new_user_session_path %> |
      <%= link_to t(".signup"), new_user_registration_path %>
    <% end %>
  </span>
</nav>
