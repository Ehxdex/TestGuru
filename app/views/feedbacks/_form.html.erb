<%= form_with model: @feedback, local: true do |f| %>
  <%= render 'shared/errors', resource: @feedback %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </p>

    <p>
      <%= f.label :message %><br />
      <%= f.text_area :message, rows: 7, cols: 60 %>
    </p>

    <p><%= f.submit t('.send_feedback') %></p>

<% end %>